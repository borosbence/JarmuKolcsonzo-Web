@model JarmuKolcsonzo.Web.Models.rendeles

@{
    ViewData["Title"] = "Törlés";
}

<h1>@ViewData["Title"]</h1>

<h3>Biztos, hogy törli a következő tételt?</h3>
<div>
    <h4>Rendelés</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.datum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.datum)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.napok_szama)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.napok_szama)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ar)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ar)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.jarmu_id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.jarmu.rendszam)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ugyfel_id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ugyfel.TeljesNev)
        </dd class>
    </dl>
    
    <form asp-action="Torles">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Törlés" class="btn btn-danger" /> |
        <a asp-action="Index">Vissza a listához</a>
    </form>
